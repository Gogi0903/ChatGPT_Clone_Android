#: import BgBoxLayout Custom_Layouts
#: import BgStackLayout Custom_Layouts

Interface:
    hex_code: '#1E45F3'
    alpha: 0.2
    padding: dp(20), dp(20)
    spacing: 20
    orientation: 'vertical'

    Label:
        text: 'ChatGPT Clone'
        size_hint_y: None
        size: self.texture_size

    ScrollView:
        size_hint: 1, .7

        BgStackLayout:
            id: conversation
            size_hint_y: None
            height: self.minimum_height
            spacing: 3


    BgBoxLayout:
        hex_code: '#1E45F3'
        alpha: 0.2
        spacing: 5
        size_hint: 1, .25
        orientation: 'vertical'

        TextInput:
            id: input_text
            hint_text: 'Ide írhatod az üzeneted'

        BgBoxLayout:
            spacing: 5
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: 'Küld'
                size_hint_y: None
                height: dp(50)
                on_press: root.msg_to_chatgpt()
